<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="56dp">
    <EditText
            android:layout_width="338dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:text="@string/word"
            android:ems="10"
            android:id="@+id/editText"
            android:importantForAutofill="no" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="16dp"/>
    <ScrollView
            android:layout_width="360dp"
            android:layout_height="372dp"
            tools:layout_editor_absoluteX="22dp"
            tools:layout_editor_absoluteY="76dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="@string/explain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView"
                    android:layout_marginStart="16dp" android:layout_marginLeft="16dp" android:layout_marginBottom="8dp"
                    android:layout_marginRight="16dp" android:layout_marginEnd="16dp"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="372dp"
            android:layout_height="90dp" tools:layout_editor_absoluteY="480dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/linearLayout2">
        <Button
                android:text="@string/pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnPre"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
        />
        <Button
                android:text="@string/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnNext"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
        />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>